	<persistence-unit name="appjpa-mysql"
		transaction-type="RESOURCE_LOCAL">
		<!-- Persistence provider -->
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- Entity classes -->
		<class>it.alessandromodica.product.model.po.CommonBlacklist</class>
		<class>it.alessandromodica.product.model.po.CommonLogaccesso</class>
		<class>it.alessandromodica.product.model.po.CommonWarningAccesso</class>
		<class>it.alessandromodica.product.model.po.GestioneApps</class>
		<class>it.alessandromodica.product.model.po.GestioneUtenti</class>
		<class>it.alessandromodica.product.model.po.GestioneUtentiInfoautenticazione</class>
		<class>it.alessandromodica.product.model.po.GestioneUtentiOauth</class>
		<class>it.alessandromodica.product.model.po.GestioneUtentiOauthSessioni</class>
		<class>it.alessandromodica.product.model.po.Logger</class>

